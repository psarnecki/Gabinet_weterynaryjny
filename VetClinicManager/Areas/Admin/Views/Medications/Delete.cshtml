@model VetClinicManager.Areas.Admin.DTOs.Medications.MedicationDeleteDto

@{
    ViewData["Title"] = "Usuń lek/materiał";
    Layout = "_Layout";
}

<h1>Usuń lek/materiał</h1>

<h3>Czy na pewno chcesz usunąć ten lek/materiał?</h3>
<div>
    <h4>Szczegóły leku/materiału</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-area="Admin" asp-controller="Medications" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" asp-anti-forgery="true">
        <button type="submit" value="Delete" class="btn btn-danger">Usuń</button>
        |
        <a asp-area="Admin" asp-controller="Medications" asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>