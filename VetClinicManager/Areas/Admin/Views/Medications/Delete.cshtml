@model VetClinicManager.Areas.Admin.DTOs.Medications.MedicationDeleteDto

@{
    ViewData["Title"] = "Usuń lek/materiał";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]: @Model.Name</h1>
    <hr />

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Potwierdzenie</h4>
        <p>Czy na pewno chcesz trwale usunąć ten lek/materiał z systemu? <strong>Tej operacji nie można cofnąć.</strong></p>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            Szczegóły leku/materiału do usunięcia
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 col-md-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Medications" asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Tak, usuń
        </button>
        <a asp-area="Admin" asp-controller="Medications" asp-action="Index" class="btn btn-outline-secondary ms-2">
            Anuluj
        </a>
    </form>
</div>

@section Scripts {
    @* Optional scripts *@
}