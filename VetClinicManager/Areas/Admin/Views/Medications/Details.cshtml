@model VetClinicManager.Areas.Admin.DTOs.Medications.MedicationDeleteDto

@{
    ViewData["Title"] = "Szczegóły leku/materiału";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]: @Model.Name</h1>
    <hr />

    <div class="card">
        <div class="card-header">
            Informacje
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 col-md-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                
                @* Tutaj można dodać więcej pól, jeśli pojawią się w DTO *@
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-area="Admin" asp-controller="Medications" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edytuj
        </a>
        <a asp-area="Admin" asp-controller="Medications" asp-action="Index" class="btn btn-outline-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Powrót do listy
        </a>
    </div>

</div>

@section Scripts {
    @* Optional scripts *@
}