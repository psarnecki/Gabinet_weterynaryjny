@model VetClinicManager.Areas.Admin.DTOs.Users.UserEditDto

@{
    ViewData["Title"] = "Edytuj Użytkownika";
    Layout = "_Layout"; @* Upewnij się, że ścieżka do layoutu jest poprawna *@
}

<h1>Edytuj Użytkownika</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        @* Formularz POST do akcji Edit, przekazujemy ID użytkownika w asp-route-id *@
        <form asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @* Validation Summary wyświetla wszystkie błędy walidacji i błędy z UserManager *@
            <div asp-validation-summary="All" class="text-danger"></div>

            @* Ukryte pole na ID użytkownika - kluczowe do przesłania do akcji POST *@
            <input type="hidden" asp-for="Id" />

            @* Pola formularza - podobne jak w Create *@
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span> @* Wyświetla błędy dla tego pola *@
            </div>
             <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group mb-3">
                <label asp-for="Specialization" class="form-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            @* Sekcja edycji ról *@
            <div class="form-group mb-3">
                 <label asp-for="SelectedRoles" class="form-label"></label><br/>
                 @if (Model.AvailableRoles != null)
                 {
                     @for (int i = 0; i < Model.AvailableRoles.Count; i++)
                     {
                         var role = Model.AvailableRoles[i];
                         // Sprawdzamy, czy bieżąca rola znajduje się na liście SelectedRoles użytkownika
                         var isSelected = Model.SelectedRoles != null && Model.SelectedRoles.Contains(role);

                         @* Ważne: name="SelectedRoles" i value="@role". Dodajemy 'checked' jeśli rola jest już przypisana *@
                         <div class="form-check form-check-inline">
                              <input type="checkbox"
                                     name="SelectedRoles"
                                     value="@role"
                                     id="role_edit_@i" @* Unikalne ID dla każdej etykiety *@
                                     class="form-check-input"
                                     @(isSelected ? "checked" : "") /> @* Oznacz checkbox jako zaznaczony jeśli użytkownik ma tę rolę *@
                              <label class="form-check-label" for="role_edit_@i">@role</label>
                         </div>
                     }
                 }
                 @* Błąd walidacji dla SelectedRoles (np. Required - choć rzadko używane dla listy) *@
                 <span asp-validation-for="SelectedRoles" class="text-danger"></span>
             </div>

            @* TODO: Dodaj pola do zmiany hasła, jeśli chcesz to umożliwić tutaj *@
            @* ...
             <div class="form-group mb-3">
                 <label asp-for="NewPassword" class="form-label"></label>
                 <input asp-for="NewPassword" class="form-control" />
                 <span asp-validation-for="NewPassword" class="text-danger"></span>
             </div>
              <div class="form-group mb-3">
                 <label asp-for="ConfirmNewPassword" class="form-label"></label>
                 <input asp-for="ConfirmNewPassword" class="form-control" />
                 <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
             </div>
            *@


            @* Przyciski akcji *@
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Zapisz Zmiany</button>
                 @* Link powrotny do listy użytkowników *@
                 <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* Włączenie walidacji po stronie klienta *@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}