@model IEnumerable<VetClinicManager.DTOs.Visits.VisitListUserDto>

@{
    ViewData["Title"] = "Moje Wizyty";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-3" role="alert">
            Nie masz jeszcze żadnych zarejestrowanych wizyt.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]" class="text-white">Tytuł</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" class="text-white">Data Utworzenia</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" class="text-white">Status</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AnimalSortParm"]" class="text-white">Zwierzę</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["VetSortParm"]" class="text-white">Lekarz Prowadzący</a>
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                            </td>
                            <td>
                                @item.CreatedDate.ToString("d")
                            </td>
                            <td>
                                @{
                                    string statusBadgeClass = item.Status switch
                                    {
                                        VetClinicManager.Models.Enums.VisitStatus.Scheduled => "bg-warning text-dark",
                                        VetClinicManager.Models.Enums.VisitStatus.Completed => "bg-success",
                                        VetClinicManager.Models.Enums.VisitStatus.InProgress => "bg-primary",
                                        VetClinicManager.Models.Enums.VisitStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusBadgeClass">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td>
                                @(item.Animal?.Name) (@(item.Animal?.Species) @(item.Animal?.Breed))
                            </td>
                            <td>
                                @if (item.AssignedVet != null)
                                {
                                    <span>@(item.AssignedVet.FirstName) @(item.AssignedVet.LastName)</span>
                                }
                                else
                                {
                                    <span class="text-muted">Nieprzypisany</span>
                                }
                            </td>
                             <td>
                                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>