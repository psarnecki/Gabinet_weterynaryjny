@using VetClinicManager.Models.Enums
@model VetClinicManager.DTOs.Visits.VisitListReceptionistDto

@functions {
    public string GetEnumDisplayName(Enum enumValue)
    {
        return enumValue.GetType()
                        .GetMember(enumValue.ToString())
                        .First()
                        .GetCustomAttribute<System.ComponentModel.DataAnnotations.DisplayAttribute>()?
                        .GetName() ?? enumValue.ToString();
    }
}

<div class="container">
    <h2>@Model.Title</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Szczegóły Wizyty
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong>
                        @{
                            string statusBadgeClass = Model.Status switch
                            {
                                VisitStatus.Scheduled => "bg-warning text-dark",
                                VisitStatus.Completed => "bg-success",
                                VisitStatus.InProgress => "bg-primary",
                                VisitStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusBadgeClass">@GetEnumDisplayName(Model.Status)</span>
                    </p>

                    <p><strong>Priorytet:</strong>
                        @{
                            string priorityBadgeClass = Model.Priority switch
                            {
                                VisitPriority.Critical => "bg-danger",
                                VisitPriority.Urgent => "bg-warning text-dark",
                                VisitPriority.Normal => "bg-info",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @priorityBadgeClass">@GetEnumDisplayName(Model.Priority)</span>
                    </p>
                    <p><strong>Data:</strong> @Model.CreatedDate.ToString("g")</p>
                    <p><strong>Zwierzę:</strong>
                        @if (Model.Animal != null)
                        {
                            <a asp-controller="Animals" asp-action="Details" asp-route-id="@Model.Animal.Id">
                                @Model.Animal.Name</a>
                            <span>(@Model.Animal.Species @Model.Animal.Breed)</span>
                        }
                        else
                        {
                            <span class="text-muted">Brak danych</span>
                        }
                    </p>
                    <p><strong>Weterynarz Prowadzący:</strong> 
                        @if (Model.AssignedVet != null) {
                            <span>@Model.AssignedVet.FirstName @Model.AssignedVet.LastName (<a href="mailto:@Model.AssignedVet.Email">@Model.AssignedVet.Email</a>)</span>
                        } else {
                            <span class="text-muted">Nieprzypisany</span>
                        }
                    </p>
                </div>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        Opis
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <h3>Historia Wizyty</h3>
    @if (Model.Updates != null && Model.Updates.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Weterynarz</th>
                        <th>Notatki</th>
                        <th>Leki</th>
                        <th>Załączniki</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var update in Model.Updates.OrderByDescending(u => u.UpdateDate))
                    {
                        <tr>
                            <td>@update.UpdateDate.ToString("g")</td>
                            <td>@update.UpdatedByVetName</td>
                            <td>@update.Notes</td>
                            <td>
                                @if (update.Medications != null && update.Medications.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var med in update.Medications)
                                        {
                                            <li>
                                                <strong>@med.Name</strong> - 
                                                (@med.StartDate.ToString("d") - @(med.EndDate?.ToString("d") ?? "w trakcie"))
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Brak</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(update.ImageUrl))
                                {
                                    <a href="@update.ImageUrl" target="_blank" class="btn btn-sm btn-outline-primary">Zobacz</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Brak zarejestrowanych aktualizacji.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Powrót do listy</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj wizytę</a>
        <a asp-action="GenerateVisitReport" asp-route-id="@Model.Id" class="btn btn-success" target="_blank">Zapisz w pliku PDF</a>
    </div>
</div>