@using VetClinicManager.Models.Enums
@model VetClinicManager.DTOs.Visits.VisitListReceptionistDto

<div class="container">
    <h2>@Model.Title</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Visit Details
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong>
                        @{
                            string statusBadgeClass = Model.Status switch
                            {
                                VisitStatus.Scheduled => "bg-warning text-dark",
                                VisitStatus.Completed => "bg-success",
                                VisitStatus.InProgress => "bg-primary",
                                VisitStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusBadgeClass">@Model.Status</span>
                    </p>

                    <p><strong>Priority:</strong>
                        @{
                            string priorityBadgeClass = Model.Priority switch
                            {
                                VisitPriority.Critical => "bg-danger",
                                VisitPriority.Urgent => "bg-warning text-dark",
                                VisitPriority.Normal => "bg-info",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @priorityBadgeClass">@Model.Priority</span>
                    </p>
                    <p><strong>Created:</strong> @Model.CreatedDate.ToString("g")</p>
                    <p><strong>Animal:</strong>
                        <a asp-controller="Animals" asp-action="Details" asp-route-id="@Model.Animal.Id">
                            @Model.Animal.Name</a>
                        <span>(@Model.Animal.Species @Model.Animal.Breed)</span>
                    </p>
                    <p><strong>Assigned Vet:</strong> 
                        @if (Model.AssignedVet != null) {
                            <span>@Model.AssignedVet.FirstName @Model.AssignedVet.LastName (@Model.AssignedVet.Email)</span>
                        } else {
                            <span class="text-danger">Not assigned</span>
                        }
                    </p>
                </div>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        Description
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <h3>Visit Updates</h3>
    @if (Model.Updates.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Vet</th>
                        <th>Notes</th>
                        <th>Medications</th>
                        <th>Attachments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var update in Model.Updates.OrderByDescending(u => u.UpdateDate))
                    {
                        <tr>
                            <td>@update.UpdateDate.ToString("g")</td>
                            <td>@update.UpdatedByVetName</td>
                            <td>@update.Notes</td>
                            <td>
                                @if (!string.IsNullOrEmpty(update.PrescribedMedications))
                                {
                                    <p>@update.PrescribedMedications</p>
                                }
                                @if (update.Medications.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var med in update.Medications)
                                        {
                                            <li>
                                                <strong>@med.Name</strong> - 
                                                (@med.StartDate.ToString("d") - @(med.EndDate?.ToString("d") ?? "ongoing"))
                                            </li>
                                        }
                                    </ul>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(update.ImageUrl))
                                {
                                    <a href="@update.ImageUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-image"></i> View
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No updates recorded yet.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Visit</a>
    </div>
</div>