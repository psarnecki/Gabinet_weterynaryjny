@model VetClinicManager.DTOs.Visits.VisitListVetDto

<div class="container">
    <h2>@Model.Title</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Visit Details
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
                    <p><strong>Priority:</strong> <span class="badge bg-warning">@Model.Priority</span></p>
                    <p><strong>Created:</strong> @Model.CreatedDate.ToString("g")</p>
                    <p><strong>Animal:</strong> @Model.Animal?.Name (@Model.Animal?.Breed)</p>
                </div>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        Description
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <h3>Visit History</h3>
    @if (Model.Updates.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Notes</th>
                        <th>Medications</th>
                        <th>Attachments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var update in Model.Updates.OrderByDescending(u => u.UpdateDate))
                    {
                        <tr>
                            <td>@update.UpdateDate.ToString("g")</td>
                            <td>@update.Notes</td>
                            <td>
                                @if (!string.IsNullOrEmpty(update.PrescribedMedications))
                                {
                                    <p>@update.PrescribedMedications</p>
                                }
                                @if (update.Medications.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var med in update.Medications)
                                        {
                                            <li>
                                                <strong>@med.Name</strong> - 
                                                (@med.StartDate.ToString("d") - @(med.EndDate?.ToString("d") ?? "until further notice"))
                                            </li>
                                        }
                                    </ul>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(update.ImageUrl))
                                {
                                    <a href="@update.ImageUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-image"></i> View
                                    </a>
                                }
                            </td>
                            <td>
                                <a asp-controller="VisitUpdates" asp-action="Edit" asp-route-id="@update.Id" 
                                   class="btn btn-sm btn-outline-primary" title="Edit this update">
                                </a>
                                @if (User.IsInRole("Vet"))
                                {
                                    <form asp-controller="VisitUpdates" asp-action="Delete" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this update? This action cannot be undone.');">
      
                                        <input type="hidden" name="id" value="@update.Id" />
    
                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete this update">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>   
        </div>
    }
    else
    {
        <div class="alert alert-info">No updates recorded yet.</div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        <a asp-controller="Visits" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Visit</a>
        <a asp-controller="VisitUpdates" asp-action="Create" asp-route-visitId="@Model.Id" class="btn btn-primary">Add Update</a>
    </div>
</div>