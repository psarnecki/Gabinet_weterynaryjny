@model IEnumerable<VetClinicManager.DTOs.Visits.VisitListVetDto>

@{
    ViewData["Title"] = "Moje Wizyty (Weterynarz)";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-3" role="alert">
            Nie masz żadnych wizyt przypisanych do Ciebie.
        </div>
    }
    else
    {
        <div class="table-responsive"> 
            <table class="table table-striped table-hover"> 
                <thead class="table-dark">
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]" class="text-white">Tytuł</a>
                    </th>
                    <th>
                        Opis
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" class="text-white">Data Utworzenia</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" class="text-white">Status</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["PrioritySortParm"]" class="text-white">Priorytet</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AnimalSortParm"]" class="text-white">Zwierzę</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["OwnerSortParm"]" class="text-white">Właściciel</a>
                    </th>
                    <th class="text-end text-nowrap" style="font-weight: normal; font-size: 0.8rem;">
                        Sortowanie: @ViewData["SortDescription"]
                    </th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @item.CreatedDate.ToString("d")
                            </td>
                            <td>
                                @{
                                    string statusBadgeClass = item.Status switch
                                    {
                                        VetClinicManager.Models.Enums.VisitStatus.Scheduled => "bg-warning text-dark",
                                        VetClinicManager.Models.Enums.VisitStatus.Completed => "bg-success",
                                        VetClinicManager.Models.Enums.VisitStatus.InProgress => "bg-primary",
                                        VetClinicManager.Models.Enums.VisitStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusBadgeClass">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                             <td>
                                @{
                                    string priorityBadgeClass = item.Priority switch
                                    {
                                        VetClinicManager.Models.Enums.VisitPriority.Critical => "bg-danger",
                                        VetClinicManager.Models.Enums.VisitPriority.Urgent => "bg-warning text-dark",
                                        VetClinicManager.Models.Enums.VisitPriority.Normal => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @priorityBadgeClass">
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </span>
                            </td>
                            <td>
                                @(item.Animal?.Name) (@(item.Animal?.Species) @(item.Animal?.Breed))
                            </td>
                            <td>
                                @if (item.Owner != null)
                                {
                                    <span>@(item.Owner.FirstName) @(item.Owner.LastName)</span>
                                }
                                else
                                {
                                     <span class="text-muted">Brak właściciela</span>
                                }
                            </td>
                             <td class="text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Szczegóły wizyty">Szczegóły</a>
                                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary ms-1" title="Edytuj wizytę"> Edytuj</a>
                             </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>