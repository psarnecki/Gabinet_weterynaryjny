@model VetClinicManager.DTOs.HealthRecords.HealthRecordEditVetDto

@{
    ViewData["Title"] = "Utwórz Kartę Zdrowia";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <h4>Karta Zdrowia dla zwierzęcia: <strong>@ViewBag.AnimalName</strong></h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }

                <input type="hidden" asp-for="AnimalId" />

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="IsSterilized" />
                    <label class="form-check-label" asp-for="IsSterilized"></label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ChronicDiseases" class="form-label"></label>
                    <input asp-for="ChronicDiseases" class="form-control" />
                    <span asp-validation-for="ChronicDiseases" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Allergies" class="form-label"></label>
                    <input asp-for="Allergies" class="form-control" />
                    <span asp-validation-for="Allergies" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Vaccinations" class="form-label"></label>
                    <input asp-for="Vaccinations" class="form-control" />
                    <span asp-validation-for="Vaccinations" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastVaccinationDate" class="form-label"></label>
                    <input asp-for="LastVaccinationDate" class="form-control" type="date" 
                           value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="LastVaccinationDate" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex">
                    <button type="submit" class="btn btn-primary">Utwórz</button> 
                    <a asp-controller="Animals" asp-action="Index" class="btn btn-outline-secondary ms-2">Anuluj</a> 
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}