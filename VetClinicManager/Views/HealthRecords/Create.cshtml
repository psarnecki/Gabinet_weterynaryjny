@model VetClinicManager.Models.HealthRecord

@{
    ViewData["Title"] = "Utwórz Kartę Zdrowia"; // Polski tytuł
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <hr />

    @* Użyj AnimalName z ViewBag w nagłówku *@
    <h4>Karta Zdrowia dla zwierzęcia @(ViewBag.AnimalName)</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @* Ukryte pole dla ID karty zdrowia (jeśli model ma Id) *@
                @* <input type="hidden" asp-for="Id" /> *@

                @* !!! UKRYTE POLE DLA ANIMALID - PRZESYŁA ID ZWIERZĘCIA Z POWROTEM DO POST !!! *@
                @* Pobierz AnimalId z ViewBag i ustaw jako wartość ukrytego pola *@
                <input type="hidden" asp-for="AnimalId" value="@ViewBag.AnimalId" />


                @* !!! USUŃ CAŁY TEN BLOK Z DROPDOWNEM AnimalId !!! *@
                @* <div class="form-group">
                    <label asp-for="AnimalId" class="control-label"></label>
                    <select asp-for="AnimalId" class="form-control" asp-items="ViewBag.AnimalId"></select> // TA LINIA DAWAŁA BŁĄD
                    <span asp-validation-for="AnimalId" class="text-danger"></span>
                </div> *@


                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="IsSterilized" />
                    <label class="form-check-label" asp-for="IsSterilized"></label>
                    <span asp-validation-for="IsSterilized" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ChronicDiseases" class="form-label"></label>
                    <input asp-for="ChronicDiseases" class="form-control" />
                    <span asp-validation-for="ChronicDiseases" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Allergies" class="form-label"></label>
                    <input asp-for="Allergies" class="form-control" />
                    <span asp-validation-for="Allergies" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Vaccinations" class="form-label"></label>
                    <input asp-for="Vaccinations" class="form-control" />
                    <span asp-validation-for="Vaccinations" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastVaccinationDate" class="form-label"></label>
                     @* Dodaj type="date" dla lepszego inputu *@
                    <input asp-for="LastVaccinationDate" class="form-control" type="date" />
                    <span asp-validation-for="LastVaccinationDate" class="text-danger"></span>
                </div>

                @* TODO: Dodaj inne pola z encji HealthRecord jeśli są i mają być edytowalne *@

                <div class="form-group mt-3 d-flex">
                    <input type="submit" value="Utwórz" class="btn btn-primary" /> 
                    <a asp-controller="Animals" asp-action="Index" class="btn btn-outline-secondary ms-2">Powrót do Listy Zwierząt</a> 
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}