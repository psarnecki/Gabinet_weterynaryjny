@model VetClinicManager.Models.HealthRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>HealthRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnimalId" class="control-label"></label>
                <select asp-for="AnimalId" class ="form-control" asp-items="ViewBag.AnimalId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSterilized" /> @Html.DisplayNameFor(model => model.IsSterilized)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ChronicDiseases" class="control-label"></label>
                <input asp-for="ChronicDiseases" class="form-control" />
                <span asp-validation-for="ChronicDiseases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allergies" class="control-label"></label>
                <input asp-for="Allergies" class="form-control" />
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vaccinations" class="control-label"></label>
                <input asp-for="Vaccinations" class="form-control" />
                <span asp-validation-for="Vaccinations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastVaccinationDate" class="control-label"></label>
                <input asp-for="LastVaccinationDate" class="form-control" />
                <span asp-validation-for="LastVaccinationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

