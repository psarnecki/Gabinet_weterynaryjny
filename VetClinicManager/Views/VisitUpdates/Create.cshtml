@model VetClinicManager.DTOs.VisitUpdates.VisitUpdateCreateDto

@{
ViewData["Title"] = "Dodaj Aktualizację Wizyty";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>@ViewData["Title"]</h2>
        <h4>Dla wizyty: @ViewBag.VisitTitle</h4>
        @if (!string.IsNullOrEmpty(ViewBag.AnimalName))
        {
        <h5>Zwierzę: @ViewBag.AnimalName</h5>
        }
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            @if (!ViewData.ModelState.IsValid)
            {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="VisitId" />

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="form-label">Załącznik (obraz)</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Sekcja Leków -->
            <div class="card mt-3">
                <div class="card-header bg-secondary text-white">
                    <h5>Przepisane Leki</h5>
                </div>
                <div class="card-body">
                    <div id="medications-container">
                        <!-- Początkowy formularz leku -->
                        <div class="medication-form mb-3 border p-3">
                            <div class="form-group mb-2">
                                <label class="form-label">Lek</label>
                                <select name="AnimalMedications[0].MedicationId" class="form-select" asp-items="ViewBag.Medications">
                                    <option value="">-- Wybierz lek --</option>
                                </select>
                            </div>
                            <div class="form-group mb-2">
                                <label class="form-label">Data rozpoczęcia</label>
                                <input type="date" name="AnimalMedications[0].StartDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="form-group mb-2">
                                <label class="form-label">Data zakończenia</label>
                                <input type="date" name="AnimalMedications[0].EndDate" class="form-control" />
                            </div>
                            <button type="button" class="btn btn-danger btn-sm remove-medication mt-2">Usuń</button>
                        </div>
                    </div>
                    <button type="button" id="add-medication" class="btn btn-success mt-2">
                        <i class="bi bi-plus-circle"></i> Dodaj kolejny lek
                    </button>
                </div>
            </div>

            <div class="form-group mt-4 d-flex">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Dodaj aktualizację
                </button>
                <a asp-action="Details" asp-controller="Visits" asp-route-id="@Model.VisitId"
                   class="btn btn-outline-secondary ms-2">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        let medicationIndex = 1;

        $('#add-medication').click(function() {
            const newForm = $(`
                    <div class="medication-form mb-3 border p-3">
                        <div class="form-group mb-2">
                            <label class="form-label">Lek</label>
                            <select name="AnimalMedications[${medicationIndex}].MedicationId" class="form-select"></select>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label">Data rozpoczęcia</label>
                            <input type="date" name="AnimalMedications[${medicationIndex}].StartDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label">Data zakończenia</label>
                            <input type="date" name="AnimalMedications[${medicationIndex}].EndDate" class="form-control" />
                        </div>
                        <button type="button" class="btn btn-danger btn-sm remove-medication mt-2">Usuń</button>
                    </div>
                `);

            const select = newForm.find('select');
            const originalSelect = $('#medications-container').find('select:first');
            select.empty();
            originalSelect.find('option').clone().appendTo(select);

            $('#medications-container').append(newForm);
            medicationIndex++;
        });

        $(document).on('click', '.remove-medication', function() {
            $(this).closest('.medication-form').remove();
        });
    });
</script>
}