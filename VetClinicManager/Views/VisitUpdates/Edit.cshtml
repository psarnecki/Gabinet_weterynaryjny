@model VetClinicManager.DTOs.VisitUpdates.VisitUpdateEditVetDto

@{
    ViewData["Title"] = "Edytuj Aktualizację Wizyty";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="visitUpdateForm" enctype="multipart/form-data">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }
            
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <label class="form-label">Aktualny załącznik</label>
                    <div>
                        <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 200px;" alt="Aktualny załącznik" />
                    </div>
                </div>
            }

            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="form-label">
                    @(string.IsNullOrEmpty(Model.ImageUrl) ? "Dodaj załącznik (obraz)" : "Zmień załącznik (obraz)")
                </label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            
            <!-- Sekcja Obecnych Leków -->
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h5>Obecnie podawane leki</h5>
                </div>
                <div class="card-body">
                    @if (Model.ExistingAnimalMedications != null && Model.ExistingAnimalMedications.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Lek</th>
                                    <th>Data rozpoczęcia</th>
                                    <th>Data zakończenia</th>
                                    <th>Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.ExistingAnimalMedications.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" asp-for="ExistingAnimalMedications[i].Id" />
                                            <select asp-for="ExistingAnimalMedications[i].MedicationId" 
                                                    class="form-select" 
                                                    asp-items="ViewBag.Medications">
                                                <option value="">-- Wybierz lek --</option>
                                            </select>
                                            <span asp-validation-for="ExistingAnimalMedications[i].MedicationId" class="text-danger"></span>
                                        </td>
                                        <td>
                                            <input type="date" asp-for="ExistingAnimalMedications[i].StartDate" class="form-control" />
                                            <span asp-validation-for="ExistingAnimalMedications[i].StartDate" class="text-danger"></span>
                                        </td>
                                        <td>
                                            <input type="date" asp-for="ExistingAnimalMedications[i].EndDate" class="form-control" />
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-danger remove-existing-medication"
                                                    data-medication-id="@Model.ExistingAnimalMedications[i].Id">
                                                Usuń
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Brak leków przypisanych do tej aktualizacji.</p>
                    }
                </div>
            </div>

            <!-- Sekcja Dodawania Nowych Leków -->
            <div class="card mt-3">
                <div class="card-header bg-secondary text-white">
                    <h5>Dodaj nowe leki</h5>
                </div>
                <div class="card-body">
                    <div id="new-medications-container">
                        @for (var i = 0; i < Model.NewAnimalMedications.Count; i++)
                        {
                            <div class="medication-form mb-3 border p-3">
                                <input type="hidden" asp-for="NewAnimalMedications[i].VisitUpdateId" value="@Model.Id" />
                                <div class="form-group">
                                    <label asp-for="NewAnimalMedications[i].MedicationId" class="form-label"></label>
                                    <select asp-for="NewAnimalMedications[i].MedicationId" class="form-select" asp-items="ViewBag.Medications">
                                        <option value="">-- Wybierz lek --</option>
                                    </select>
                                    <span asp-validation-for="NewAnimalMedications[i].MedicationId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewAnimalMedications[i].StartDate" class="form-label"></label>
                                    <input type="date" asp-for="NewAnimalMedications[i].StartDate" class="form-control" />
                                    <span asp-validation-for="NewAnimalMedications[i].StartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewAnimalMedications[i].EndDate" class="form-label"></label>
                                    <input type="date" asp-for="NewAnimalMedications[i].EndDate" class="form-control" />
                                </div>
                                <button type="button" class="btn btn-danger btn-sm remove-medication mt-2">Usuń</button>
                            </div>
                        }
                    </div>
                    <button type="button" id="add-medication" class="btn btn-success mt-2">Dodaj kolejny lek</button>
                </div>
            </div>

            <div class="form-group mt-4 d-flex">
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                <a asp-controller="Visits" asp-action="Details" asp-route-id="@Model.VisitId"
                   class="btn btn-outline-secondary ms-2">Powrót do wizyty</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let newMedicationIndex = @Model.NewAnimalMedications.Count;

            $('#add-medication').click(function() {
                const newForm = $(`
                    <div class="medication-form mb-3 border p-3">
                        <div class="form-group mb-2">
                            <label class="form-label">Lek</label>
                            <select name="NewAnimalMedications[${newMedicationIndex}].MedicationId" class="form-select" required>
                                <option value="">-- Wybierz lek --</option>
                                @foreach (var med in (IEnumerable<SelectListItem>)ViewBag.Medications)
                                {
                                    <option value="@med.Value">@med.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label">Data rozpoczęcia</label>
                            <input type="date" name="NewAnimalMedications[${newMedicationIndex}].StartDate" 
                                   class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label">Data zakończenia</label>
                            <input type="date" name="NewAnimalMedications[${newMedicationIndex}].EndDate" class="form-control" />
                        </div>
                        <button type="button" class="btn btn-danger btn-sm remove-medication mt-2">Usuń</button>
                    </div>
                `);

                $('#new-medications-container').append(newForm);
                newMedicationIndex++;
            });

            $(document).on('click', '.remove-medication', function() {
                $(this).closest('.medication-form').remove();
            });

            $(document).on('click', '.remove-existing-medication', function() {
                const row = $(this).closest('tr');
                const medicationId = $(this).data('medication-id');

                if (medicationId) {
                    const hiddenInput = $('<input>')
                        .attr('type', 'hidden')
                        .attr('name', 'RemovedMedicationIds')
                        .val(medicationId);

                    $('#visitUpdateForm').append(hiddenInput);
                }

                row.hide(); 
            });
        });
    </script>
}