@model VetClinicManager.DTOs.VisitUpdates.VisitUpdateEditVetDto

@{
    ViewData["Title"] = "Edit Visit Update";
}

<div asp-validation-summary="All" class="text-danger"></div>
<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="visitUpdateForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrescribedMedications" class="control-label"></label>
                <input asp-for="PrescribedMedications" class="form-control" />
                <span asp-validation-for="PrescribedMedications" class="text-danger"></span>
            </div>

            <!-- Current Medications Section -->
<div class="card mt-3">
    <div class="card-header bg-info text-white">
        <h5>Current Medications</h5>
    </div>
    <div class="card-body">
        @if (Model.ExistingAnimalMedications != null && Model.ExistingAnimalMedications.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Medication</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ExistingAnimalMedications.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="hidden" asp-for="ExistingAnimalMedications[i].Id" />
                                <select asp-for="ExistingAnimalMedications[i].MedicationId" 
                                        class="form-control" 
                                        asp-items="ViewBag.Medications">
                                    <option value="">-- Select Medication --</option>
                                </select>
                                <span asp-validation-for="ExistingAnimalMedications[i].MedicationId" class="text-danger"></span>
                            </td>
                            <td>
                                <input type="date" asp-for="ExistingAnimalMedications[i].StartDate" 
                                       class="form-control" />
                                <span asp-validation-for="ExistingAnimalMedications[i].StartDate" class="text-danger"></span>
                            </td>
                            <td>
                                <input type="date" asp-for="ExistingAnimalMedications[i].EndDate" 
                                       class="form-control" />
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-danger remove-existing-medication"
                                        data-medication-id="@Model.ExistingAnimalMedications[i].Id">
                                    Remove
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No medications assigned to this update.</p>
        }
    </div>
</div>

    <!-- Add New Medications Section -->
<div class="card mt-3">
    <div class="card-header bg-secondary text-white">
        <h5>Add New Medications</h5>
    </div>
    <div class="card-body">
        <div id="new-medications-container">
            @for (var i = 0; i < Model.NewAnimalMedications.Count; i++)
            {
                <div class="medication-form mb-3 border p-3">
                    <input type="hidden" asp-for="NewAnimalMedications[i].VisitUpdateId" value="@Model.Id" />
                    <div class="form-group">
                        <label asp-for="NewAnimalMedications[i].MedicationId" class="control-label"></label>
                        <select asp-for="NewAnimalMedications[i].MedicationId" class="form-control" 
                                asp-items="ViewBag.Medications">
                            <option value="">-- Select Medication --</option>
                        </select>
                        <span asp-validation-for="NewAnimalMedications[i].MedicationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAnimalMedications[i].StartDate" class="control-label"></label>
                        <input type="date" asp-for="NewAnimalMedications[i].StartDate" class="form-control" />
                        <span asp-validation-for="NewAnimalMedications[i].StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAnimalMedications[i].EndDate" class="control-label"></label>
                        <input type="date" asp-for="NewAnimalMedications[i].EndDate" class="form-control" />
                    </div>
                    <button type="button" class="btn btn-danger btn-sm remove-medication">Remove</button>
                </div>
            }
        </div>
        <button type="button" id="add-medication" class="btn btn-success mt-2">
            Add Another Medication
        </button>
    </div>
</div>

            <div class="form-group mt-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-controller="Visits" asp-action="Details" asp-route-id="@ViewBag.VisitId"
                   class="btn btn-secondary">Back to Visit</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let newMedicationIndex = @Model.NewAnimalMedications.Count;
            let removedMedications = [];

            // Add new medication form
            $('#add-medication').click(function() {
                const newForm = $(`
                    <div class="medication-form mb-3 border p-3">
                        <div class="form-group">
                            <label class="control-label">Medication</label>
                            <select name="NewAnimalMedications[${newMedicationIndex}].MedicationId" class="form-control" required>
                                <option value="">-- Select Medication --</option>
                                @foreach (var med in ViewBag.Medications)
                                {
                                    <option value="@med.Value">@med.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Start Date</label>
                            <input type="date" name="NewAnimalMedications[${newMedicationIndex}].StartDate" 
                                   class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                        <div class="form-group">
                            <label class="control-label">End Date</label>
                            <input type="date" name="NewAnimalMedications[${newMedicationIndex}].EndDate" class="form-control" />
                        </div>
                        <button type="button" class="btn btn-danger btn-sm remove-medication">Remove</button>
                    </div>
                `);

                $('#new-medications-container').append(newForm);
                newMedicationIndex++;
            });

            // Remove new medication form
            $(document).on('click', '.remove-medication', function() {
                $(this).closest('.medication-form').remove();
            });

            $(document).on('click', '.remove-existing-medication', function() {
                const row = $(this).closest('tr');
                const medicationId = $(this).data('medication-id');

                if (medicationId) {
                    removedMedications.push(medicationId);

                    // Sprawdź, czy ukryte pole już istnieje. Jeśli nie, stwórz je.
                    let hiddenInput = $('#removedMedications');
                    if (hiddenInput.length === 0) {
                        hiddenInput = $('<input>').attr({
                            type: 'hidden',
                            id: 'removedMedications',
                            name: 'RemovedMedicationIds'
                        }).appendTo('#visitUpdateForm'); // Dodaj do formularza
                    }

                    // Zawsze aktualizuj wartość
                    hiddenInput.val(removedMedications.join(','));
                }

                row.remove();
            });

            // Walidacja przed wysłaniem formularza
            $('#visitUpdateForm').submit(function(e) {
                let isValid = true;
                
                // Sprawdź istniejące leki
                $('select[name*="ExistingAnimalMedications"]').each(function() {
                    if ($(this).is(':visible') && ($(this).val() === "" || $(this).val() === null)) {
                        isValid = false;
                        $(this).addClass('is-invalid');
                        $(this).next('.text-danger').text('Please select a medication');
                    }
                });
                
                // Sprawdź nowe leki
                $('select[name*="NewAnimalMedications"]').each(function() {
                    if ($(this).val() === "" || $(this).val() === null) {
                        isValid = false;
                        $(this).addClass('is-invalid');
                        $(this).closest('.form-group').find('.text-danger').text('Please select a medication');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill all required medication fields');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}