@model VetClinicManager.DTOs.VisitUpdates.VisitUpdateDeleteDto

@{
    ViewData["Title"] = "Usuń aktualizację wizyty";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Potwierdzenie</h4>
        <p>Czy na pewno chcesz trwale usunąć tę aktualizację? <strong>Tej operacji nie można cofnąć.</strong></p>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            Szczegóły aktualizacji do usunięcia
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </dt>
                <dd class="col-sm-9">
                    @Model.UpdateDate.ToString("dd.MM.yyyy HH:mm")
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="VisitId" />
        
        <button type="submit" class="btn btn-danger">Tak, usuń</button>
        <a asp-controller="Visits" asp-action="Details" asp-route-id="@Model.VisitId" class="btn btn-outline-secondary ms-2">Anuluj</a>
    </form>
</div>