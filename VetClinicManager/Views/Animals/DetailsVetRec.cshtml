@model VetClinicManager.DTOs.Animals.AnimalListVetRecDto

@{
    ViewData["Title"] = "Szczegóły Zwierzęcia (Personel)";
}

<h1>Szczegóły Zwierzęcia</h1>

<div>
    <h4>Informacje o zwierzęciu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MicrochipId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MicrochipId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BodyWeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BodyWeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
             @if (!string.IsNullOrEmpty(Model.ImageUrl))
             {
                 <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
             }
             else
             {
                 @:Brak zdjęcia
             }
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastVisitDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastVisitDate)
        </dd>

        <dt class = "col-sm-2">
             Właściciel
        </dt>
        <dd class = "col-sm-10">
            @(Model.Owner?.FirstName + " " + Model.Owner?.LastName)
             @if (Model.Owner != null)
             {
                  <a asp-controller="User" asp-action="Details" asp-route-id="@Model.Owner.Id">@(Model.Owner.FirstName + " " + Model.Owner.LastName)</a>
             }
        </dd>
    </dl> 
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> | 
    <a asp-action="Index">Powrót do listy</a>
</div>