@model VetClinicManager.DTOs.Animals.AnimalDetailsUserDto

@{
    ViewData["Title"] = "Szczegóły Zwierzęcia";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <hr />

    <div class="row">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="col-md-4 mb-3">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-8">
                <h4>Informacje o zwierzęciu</h4>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.MicrochipId))
                    {
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.MicrochipId)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.MicrochipId)
                        </dd>
                    }

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Species)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Species)
                    </dd>

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Breed)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Breed)
                    </dd>

                    @if (Model.DateOfBirth.HasValue)
                    {
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.DateOfBirth)
                        </dd>
                    }

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.BodyWeight)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.BodyWeight)
                    </dd>

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>

                    @if (Model.LastVisitDate.HasValue)
                    {
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.LastVisitDate)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.LastVisitDate)
                        </dd>
                    }
                    @* TODO: Add sections for Visits and AnimalMedications here if they are in the DTO *@
                </dl>
            </div>
        }
        else
        {
            <div class="col-md-12">
                <h4>Informacje o zwierzęciu</h4>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.MicrochipId))
                    {
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.MicrochipId)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.MicrochipId)
                        </dd>
                    }

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Species)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Species)
                    </dd>

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Breed)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Breed)
                    </dd>

                    @if (Model.DateOfBirth.HasValue)
                    {
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DateOfBirth)
                        </dd>
                    }

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.BodyWeight)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.BodyWeight)
                    </dd>

                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>

                    @if (Model.LastVisitDate.HasValue)
                    {
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.LastVisitDate)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.LastVisitDate)
                        </dd>
                    }
                    @* TODO: Add sections for Visits and AnimalMedications here if they are in the DTO *@
                    
                </dl>
            </div>
            
        }
    </div>

    <div class="mt-4">
        @* TODO: If Client can edit their animal (via EditOwnerAnimal action) *@
        @* <a asp-action="EditOwnerAnimal" asp-route-id="@Model?.Id" class="btn btn-primary">Edytuj</a> *@
        @* <span class="ms-2"></span> *@
        @{
            var buttonClass = Model.HealthRecordId.HasValue ? "btn-info" : "btn-success";
            var buttonText = Model.HealthRecordId.HasValue ? "Zobacz Kartę Zdrowia" : "Utwórz Kartę Zdrowia";
        }
        <a asp-controller="Animals" asp-action="RedirectToHealthRecord" asp-route-id="@Model.Id" class="btn @buttonClass">
            @buttonText
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">Powrót do Listy</a>
    </div>

</div>

@section Scripts {
    @* Optional scripts *@
}